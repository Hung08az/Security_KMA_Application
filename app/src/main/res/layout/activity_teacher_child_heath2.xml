<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    android:padding="0dp"
    app:statusBarBackground="#FFFFFF"
    tools:context=".Activity.ParentHealthActivity">

    <LinearLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="top"
        android:background="#bce9fe"
        android:contextClickable="true"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/btBackHealth"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#bce9fe"
            app:srcCompat="@drawable/previous" />

        <TextView
            android:id="@+id/txtPageTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="start"
            android:paddingStart="15dp"
            android:text="Dinh dưỡng"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="36sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btScheduleHealth"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right|end"
            android:layout_weight="1"
            android:backgroundTint="#64AF0D"
            android:drawableLeft="@drawable/schedule24px"
            android:gravity="center_horizontal|center_vertical"
            android:hapticFeedbackEnabled="false"
            android:insetLeft="8dp"
            android:insetTop="6dp"
            android:insetRight="8dp"
            android:insetBottom="6dp"
            android:paddingLeft="10dp"
            android:paddingTop="0dp"
            android:paddingRight="3dp"
            android:paddingBottom="0dp"
            android:text="Ngày"
            android:textAllCaps="false"
            android:textColor="#7C288A"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:cornerRadius="6dp"
            app:iconPadding="2dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout11"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Bữa chính:"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btMainMeal"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/textView15"
            android:backgroundTint="#FFFFFF"
            android:drawableTop="@android:drawable/ic_input_add"
            android:gravity="center_horizontal|center_vertical"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            app:iconPadding="0dp" />

        <ImageView
            android:id="@+id/imgMainMeal"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/textView15"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/no_image" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgMainMeal"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="Bữa phụ:"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btSubMeal"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_below="@+id/imgMainMeal"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/textView17"
            android:backgroundTint="#FFFFFF"
            android:drawableTop="@android:drawable/ic_input_add"
            android:gravity="center_horizontal|center_vertical"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            app:iconPadding="0dp"/>

        <ImageView
            android:id="@+id/imgSubMeal"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/textView17"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/no_image" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgSubMeal"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Phụ huynh có ý kiến xin liên hệ trực tiếp giáo viên chủ nhiệm của lớp con mình! Xin cám ơn."
            android:textColor="#595858"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextDateHealth"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:visibility="gone" />

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>